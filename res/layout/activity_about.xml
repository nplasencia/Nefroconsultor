<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_bitmap"
    tools:context="com.madilon.nefroconsultor.ui.AboutActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cabecera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/titleTextColor"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/title_activity_about"
            android:textColor="@color/windowsBackground"
            android:textSize="@dimen/btnText" />

        <TextView
            android:id="@+id/text_presentacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/title_presentacion"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosTitle" />

        <TextView
            android:id="@+id/text_presentacion_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:text="@string/desc_presentacion"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosDesc" />

        <TextView
            android:id="@+id/text_descripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/title_descripcion"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosTitle" />

        <TextView
            android:id="@+id/text_descripcion_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:text="@string/desc_descripcion"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosDesc" />

        <TextView
            android:id="@+id/text_advertencias"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/title_advertencias"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosTitle" />

        <TextView
            android:id="@+id/text_advertencias_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:text="@string/desc_advertencias"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/otrosMotivosDesc" />

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_condiciones"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_calcular"
                android:shadowColor="#000000"
                android:text="@string/title_condiciones"
                android:textColor="@color/btnCalcularText"
                android:textSize="@dimen/btnText" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>