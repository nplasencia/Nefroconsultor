<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
	
    <style name="NefroConsultorTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/windowsBackground</item>
        <item name="android:actionBarStyle">@style/NefroConsultorActionBar</item>
    </style>
    
    <style name="NefroConsultorActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionBarBackground</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>
</resources>
